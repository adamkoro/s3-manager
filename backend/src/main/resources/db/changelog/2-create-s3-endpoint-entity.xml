<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="2-create-s3-endpoint-entity" author="your_name">
        <createTable tableName="s3_endpoint">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_s3_endpoint"/>
            </column>
            <column name="endpoint_url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="access_key" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="secret_key" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_s3_endpoint_users"
                             references="users(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
